<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Article</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 20px;
      }
      .container {
        max-width: 800px;
        margin: 0 auto;
      }
      .title-input {
        width: 100%;
        padding: 10px;
        margin: 10px 0;
        border: 1px solid #ccc;
        border-radius: 4px;
        font-weight: bold;
        font-size: 24px; /* Increased font size */
      }
      .content-textarea {
        width: 100%;
        padding: 10px;
        margin: 10px 0;
        border: 1px solid #ccc;
        border-radius: 4px;
        height: 600px;
      }
      .button-group {
        text-align: right;
        margin-top: 20px;
      }
      .button {
        padding: 10px 20px;
        margin-left: 10px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
      }
      .draft-button {
        background-color: #f0ad4e;
        color: white;
      }
      .publish-button {
        background-color: #5cb85c;
        color: white;
      }
    </style>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css"
    />
  </head>
  <body>
    <div class="col-md-12 mt-3">
      <a href="/author/home" class="btn btn-link">
        <i class="bi bi-box-arrow-in-left"></i>
        Back to Dashboard
      </a>
    </div>
    <div class="container">
      <form method="post">
        <input
          type="text"
          name="title"
          class="title-input"
          value="<%= article ? article.title : '' %>"
          placeholder="Title"
        />
        <textarea name="content" class="content-textarea" placeholder="Content">
<%= article ? article.content : '' %></textarea
        >
        <div class="button-group">
          <button
            type="submit"
            name="action"
            value="draft"
            formaction="/author/<%= article ? article.id + '/edit-article/FALSE' : 'add-article/FALSE' %>"
            class="button draft-button"
          >
            Save as Draft
          </button>
          <button
            type="submit"
            name="action"
            value="publish"
            formaction="/author/<%= article ? article.id + '/edit-article/TRUE' : 'add-article/TRUE' %>"
            class="button publish-button"
          >
            Publish
          </button>
        </div>
      </form>
    </div>
  </body>
</html>
