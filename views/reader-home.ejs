<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Reader Home Page</title>
    <link
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link href="/css/styles.css" rel="stylesheet" />
  </head>
  <body>
    <%- include('partials/nav-bar') %>
    <div class="container">
      <section class="my-4">
        <h2>Newly Released</h2>
        <div class="row">
          <% articles.slice(0, 3).forEach(function(article) { %> 
            <div class="col-md-4">
              <div class="card">
                <div class="card-body">
                  <h5 class="card-title"><%= article.title %></h5>
                  <p class="card-text"><%= article.content %></p>
                </div>
              </div>
            </div>
          <% }); %>
      </section>
      <section class="my-4">
        <h2>Featured Articles</h2>
        <div class="row">
          <div class="col-md-12">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title">Article Title</h5>
                <p class="card-text">Detailed description...</p>
              </div>
            </div>
          </div>
        </div>
      </section>
      <section class="my-4">
        <h2>Visit Other Blogs</h2>
        <div class="row">
          <div class="col-md-4">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title">Blog Title</h5>
                <p class="card-text">Author: Name</p>
              </div>
            </div>
          </div>
          <!-- Add more blog links here -->
        </div>
      </section>
    </div>
  </body>
</html>
