<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css"> 

    <!-- TODO: Move to separate CSS class -->
    <style>
      .no-link-style {
        text-decoration: none;
        color: inherit;
      }

      .fixed-bottom-right {
        position: fixed;
        bottom: 20px;
        right: 20px;
        width: 80px; 
        height: 80px; 
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 32px; 
      }
    </style>
    <title><%= author.blogTitle %></title>
  </head>
  <body>
    <%- include('partials/nav-bar') %>
    <div class = "container">
      <h1><%= author.blogTitle %></h1>
      <p class="fw-bold"><%= author.blogSubtitle %></p>
      <h2>Articles</h2>
      <div class="row">
        <% articles.forEach(function(article) { %> 
          <% if (article.createdAt) { %> 
            <div class="col-md-4">
              <div class="card">
                <div class="card-body">
                  <h5 class="card-title d-flex justify-content-between align-items-center">
                    <span><%= article.title %></span>
                    <% if (article.published == 'TRUE') { %>
                      <span class="badge bg-success">Published</span>
                    <% } else { %>
                      <span class="badge bg-secondary">Draft</span>
                    <% } %>
                  </h5>
                  <% if (article.published == 'TRUE') { %>
                    <h6 class="card-subtitle mb-2 text-muted">
                      Published: <%= article.publishedAt %>
                    </h6>
                  <% } else {%>
                    <h6 class="card-subtitle mb-2 text-muted">
                      Created: <%= article.createdAt %>
                    </h6>
                    <% if (article.createdAt != article.updatedAt) { %>
                      <h6 class="card-subtitle mb-2 text-muted">
                        Last Modified: <%= article.updatedAt %>
                      </h6>
                    <% } %>
                  <% } %>
                  <p class="card-text"><%= cutText(article.content, 25) %></p>
                  <div class="d-flex mt-3 justify-content-between">
                    <div class="d-flex">
                      <div class="icon-container bg-light p-2 text-center me-2">
                        <i class="bi bi-hand-thumbs-up icon"></i>
                        <span><%= article.likes %></span>
                      </div>
                      <div class="icon-container bg-light p-2 text-center me-2">
                        <i class="bi bi-chat-left icon"></i>
                        <span><%= article.comments %></span>
                      </div>
                      <div class="icon-container bg-light p-2 text-center">
                        <i class="bi bi-eye icon"></i>
                        <span><%= article.views %></span>
                      </div>
                    </div>
                    <div class="d-flex">
                      <% if (article.published == 'FALSE') { %>
                        <div class="bg-light p-2 text-center me-2">
                          <a href="/author/<%= article.id %>/edit" class="text-decoration-none no-link-style">
                            <i class="bi bi-pencil"></i>
                            <span>Edit</span>
                          </a>
                        </div>
                        <% } else { %>
                          <div class="bg-light p-2 text-center me-2">
                            <a href="/article/<%= article.id %>" class="text-decoration-none no-link-style">
                              <span>View in Reader</span>
                            </a>
                          </div>
                        <% } %>
                      <div class="bg-light p-2 text-center delete-button">
                        <form action="/author/<%= article.id %>/delete" method="POST" style="display:inline;">
                          <button type="submit" class="btn" style="border: none; background: none; padding: 0;">
                            <i class="bi bi-trash text-danger"></i>
                          </button>
                        </form>
                      </div>  
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% }; %>
        <% }); %>
      </div>
    </div>
    <a href="/author/add" class="btn btn-primary btn-lg rounded-circle fixed-bottom-right">
      <i class="bi bi-plus"></i>
    </a>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
</body>
</html>
