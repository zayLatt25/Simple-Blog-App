<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css">
    
    <!-- TODO: Move to separate CSS class -->
    <style>
      .no-link-style {
        text-decoration: none;
        color: inherit;
      }
    </style>
    <title><%= author.blogTitle %></title>
  </head>
  <body>
    <%- include('partials/nav-bar') %>
    <h1><%= author.blogTitle %></h1>
    <p class="fw-bold"><%= author.blogSubtitle %></p>
    <div class = "container">
      <h2>All Articles</h2>
      <div class="row">
        <% articles.forEach(function(article) { %> 
          <% if (article.createdAt) { %> 
            <div class="col-md-4">
              <a href="/article/<%= article.id %>" class="no-link-style">
                <div class="card">
                  <div class="card-body">
                    <h5 class="card-title d-flex justify-content-between align-items-center">
                      <span><%= article.title %></span>
                      <% if (article.published) { %>
                        <span class="badge bg-success">Published</span>
                      <% } else { %>
                        <span class="badge bg-secondary">Draft</span>
                      <% } %>
                    </h5>
                    <h6 class="card-subtitle mb-2 text-muted">
                      By <%= article.authorName %> on <%= article.createdAt %>
                    </h6>
                    <p class="card-text"><%= cutText(article.content, 25) %></p>
                    <div class="d-flex mt-3 justify-content-between">
                      <div class="d-flex">
                        <div class="bg-light p-2 text-center me-2">
                          <i class="bi bi-hand-thumbs-up"></i>
                          <span><%= article.likes %></span>
                        </div>
                        <div class="bg-light p-2 text-center">
                          <i class="bi bi-chat-left"></i>
                          <span><%= article.comments %></span>
                        </div>
                      </div>
                      <div class="bg-light p-2 text-center">
                        <a href="/author/<%= article.id %>/edit" class="text-decoration-none no-link-style">
                          <i class="bi bi-pencil"></i>
                          <span>Edit</span>
                        </a>
                      </div>
                    </div>
                  </div>
                </div>
              </a>
            </div>
          <% }; %>
        <% }); %>
    </div>
    </div>
    
  </body>
</html>
